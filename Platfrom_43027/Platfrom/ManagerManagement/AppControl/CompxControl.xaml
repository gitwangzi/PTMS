<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk" 
    xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit" 
    x:Class="Gsafety.PTMS.Manager.CompxControl"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">
        <StackPanel x:Name="LayoutRoot" Background="White" Margin="0,0,0,0">
        <toolkit:DataForm ItemsSource="{Binding}" Height="249" Margin="10,10,10,5" CurrentIndex="0"/>
        <Button Name="btn_save" Click="btn_save_Click" Content="保存" HorizontalAlignment="Right" Margin="10" VerticalAlignment="Top" Width="75"/> 
    </StackPanel>
    
</UserControl>
