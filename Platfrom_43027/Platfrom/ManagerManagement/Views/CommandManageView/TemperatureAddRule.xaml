<UserControl x:Class="Gsafety.PTMS.Manager.Views.CommandManageView.TemperatureAddRule"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:VehicleSelect="clr-namespace:Gsafety.PTMS.BasicPage.VehicleSelect;assembly=BasicPage"  
    mc:Ignorable="d"
    d:DesignHeight="800" d:DesignWidth="1000">

    <Grid x:Name="LayoutRoot" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Border BorderThickness="0,1,0,1" Style="{StaticResource TopBorderStyle}" Height="40" ScrollViewer.HorizontalScrollBarVisibility="Auto"></Border>
        <Image Stretch="None" Source="/ExternalResource;component/Images/navigation.png" Margin="10,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center"></Image>
        <TextBlock HorizontalAlignment="Left"  Text="{Binding Title,Mode=TwoWay}" VerticalAlignment="Center" Margin="36,0,0,0"  Style="{StaticResource MainPage_Main_tle_TextBlockStyle}"/>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="80"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" HorizontalAlignment="Center" Margin="37,0,65,0" Width="898">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="250"></ColumnDefinition>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="20"></RowDefinition>
                    <RowDefinition  Height="40"></RowDefinition>
                    <RowDefinition  Height="40"></RowDefinition>
                    <RowDefinition  Height="40"></RowDefinition>
                    <RowDefinition  Height="40"></RowDefinition>
                    <RowDefinition  Height="40"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>

                <TextBlock HorizontalAlignment="Right"   Text="{Binding [MANAGE_Rule_Name], Source={StaticResource SR}}"  VerticalAlignment="Center" Style="{StaticResource MainPage_Main_search_TextBlockStyle}" Grid.Row="1" Grid.Column="0" Margin="0,11,5,10"/>
                <TextBox x:Name="SettingName" TabIndex="0" IsEnabled="{Binding EnableEdit,Mode=TwoWay}"  Grid.Row="1" Grid.Column="1"  HorizontalAlignment="Left" Height="28" Text="{Binding RuleName, Mode=TwoWay,NotifyOnValidationError=True, ValidatesOnDataErrors=True,UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Bottom" Width="250"  MaxLength="20" Style="{StaticResource MainPage_Main_TextBoxStyle}"  Margin="0,0,0,6"/>

                <Grid Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0"  Margin="0,0,5,0" HorizontalAlignment="Right"  Text="{Binding [MANAGE_Temperature_SettingType], Source={StaticResource SR}}" VerticalAlignment="Center" Style="{StaticResource MainPage_Main_search_TextBlockStyle}"/>
                    <ComboBox Foreground="Black" TabIndex="1" Style="{StaticResource MainPage_Main_Search_ComboBoxStyle}" Grid.Row="0" Grid.Column="1"  HorizontalAlignment="Left" IsEnabled="{Binding EnableEdit,Mode=TwoWay}" Height="25" Width="250" SelectedItem="{Binding CurrentSettingType, Mode=TwoWay}" ItemsSource="{Binding SettingTypeList}" VerticalAlignment="Center">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </Grid>


                <TextBlock HorizontalAlignment="Right" Grid.Row="2"  Text="{Binding [MANAGE_Temperature_Min], Source={StaticResource SR}}" VerticalAlignment="Center" Style="{StaticResource MainPage_Main_search_TextBlockStyle}" Margin="0,11,5,10"/>
                <TextBox HorizontalAlignment="Left" TabIndex="2" Height="28"  IsEnabled="{Binding EnableTemperature,Mode=TwoWay}"  Text="{Binding LowTemperature, Mode=TwoWay,NotifyOnValidationError=True, ValidatesOnDataErrors=True,UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" Width="250" Grid.Row="2" Grid.Column="1" MaxLength="20" Style="{StaticResource MainPage_Main_TextBoxStyle}"  Margin="0,6"/>

                <Grid Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <!--<TextBlock  Visibility="Visible" Margin="0,11,5,10"  HorizontalAlignment="Right"  Text="{Binding [MANAGE_Temperature_Type], Source={StaticResource SR}}" VerticalAlignment="Center" Style="{StaticResource MainPage_Main_search_TextBlockStyle}"   />
                    <ComboBox Visibility="Visible" TabIndex="3" Foreground="Black" Style="{StaticResource MainPage_Main_Search_ComboBoxStyle}"  Grid.Column="1" Height="25" Width="250" IsEnabled="False" SelectedItem="{Binding CurrentTemperatureType,Mode=TwoWay}" ItemsSource="{Binding TemperatureTypeList}" HorizontalAlignment="Left" VerticalAlignment="Center">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}"></TextBlock>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>-->
                    <TextBlock HorizontalAlignment="Right" Margin="0,0,5,0" Text="{Binding [MANAGE_Temperature_Max], Source={StaticResource SR}}" VerticalAlignment="Center" Style="{StaticResource MainPage_Main_search_TextBlockStyle}" Grid.Row="3"  Grid.Column="0" />
                    <TextBox  HorizontalAlignment="Left"  Height="28" TabIndex="5" IsEnabled="{Binding EnableTemperature,Mode=TwoWay}"  Text="{Binding HighTemperature, Mode=TwoWay,NotifyOnValidationError=True, ValidatesOnDataErrors=True,UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" Width="250" Grid.Row="3" Grid.Column="1" MaxLength="20" Style="{StaticResource MainPage_Main_TextBoxStyle}" Grid.ColumnSpan="2" />

                </Grid>
                
                <TextBlock Margin="0,0,5,0" HorizontalAlignment="Right" Grid.Row="3" Grid.Column="0" Text="{Binding [MANAGE_Note], Source={StaticResource SR}}"  VerticalAlignment="Center" Style="{StaticResource MainPage_Main_search_TextBlockStyle}" Height="17" TextAlignment="Right"/>
                <TextBox TabIndex="6" IsEnabled="{Binding EnableEdit,Mode=TwoWay}" AcceptsReturn="True" MaxLength="1000" TextWrapping="Wrap" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3"  Grid.RowSpan="2" HorizontalAlignment="Left" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto" Width="745" Text="{Binding UserDescription, Mode=TwoWay}" Margin="0,6"/>
                <TextBlock HorizontalAlignment="Right"   Text="{Binding [MANAGE_Rule_SettingSelected], Source={StaticResource SR}}" VerticalAlignment="Center" Style="{StaticResource MainPage_Main_search_TextBlockStyle}" Grid.Row="5"  Margin="0,11,5,10"/>
                <VehicleSelect:VehicleSelectView  Name="cSelectView" Visibility="{Binding TreeViewVisible,Mode=TwoWay}" DataContext="{Binding VehicleSelectVM,Mode=TwoWay}" Grid.Row="5" Grid.RowSpan="2" Grid.Column="1" Grid.ColumnSpan="3" Margin="0,6,0,0"/>
            </Grid>
            <StackPanel Name="add" Orientation="Horizontal" Visibility="{Binding AddOrEditButtonVisible,Mode=TwoWay}" Grid.ColumnSpan="4" VerticalAlignment="Top" HorizontalAlignment="Center" Grid.Row="1"  Margin="0,15,0,0">
                <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Name="finish" Margin="0,0,4,0" Command="{Binding CommitCommand}" IsEnabled="{Binding IsCanCommit,Mode=TwoWay}" Tag="{Binding [MANAGE_Finish], Source={StaticResource SR}}" 
                HorizontalAlignment="Center" VerticalAlignment="Center"  Grid.Column="0" Style="{StaticResource Search_ButtonStyle}">
                            <Image Height="15" Source="/ExternalResource;component/Images/MainPage_complete.png" Stretch="Fill" Width="15"/>
                        </Button>
                        <Button Command="{Binding ResetCommand}" Margin="4,0,4,0" Tag="{Binding [MANAGE_Reset], Source={StaticResource SR}}" 
                HorizontalAlignment="Center" VerticalAlignment="Center"  Grid.Column="2" Style="{StaticResource Search_ButtonStyle}">
                            <Image Height="15" Source="/ExternalResource;component/Images/MainPage_reset.png" Stretch="Fill" Width="15" />
                        </Button>
                        <Button  Command="{Binding SaveSettingCommand}" Margin="4,0,4,0"  IsEnabled="{Binding IsCanCommit,Mode=TwoWay}"  Tag="{Binding [MANAGER_SaveAndSetting], Source={StaticResource SR}}" 
                        HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="4" Style="{StaticResource Search_ButtonStyle}">
                            <Image Height="15" Source="/ExternalResource;component/Images/MainPage_return.png" Stretch="Fill" Width="15"/>
                        </Button>
                        <Button  Command="{Binding ReturnCommand}" Margin="4,0,0,0" Tag="{Binding [MANAGE_Return], Source={StaticResource SR}}" 
                        HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="6" Style="{StaticResource Search_ButtonStyle}">
                            <Image Height="15" Source="/ExternalResource;component/Images/MainPage_return.png" Stretch="Fill" Width="15"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </StackPanel>
            <StackPanel Name="setting" Orientation="Horizontal" Visibility="{Binding SettingButtonVisible,Mode=TwoWay}" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Row="1"  Margin="0,15,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Command="{Binding SettingCommand}" Tag="{Binding [MANAGE_Setting_Setting], Source={StaticResource SR}}" HorizontalAlignment="Center" VerticalAlignment="Center"  Grid.Column="0" Style="{StaticResource Search_ButtonStyle}" Margin="0,0,4,0">
                            <Image Height="15" Source="/ExternalResource;component/Images/MainPage_reset.png" Stretch="Fill" Width="15" />
                        </Button>
                        <Button  Command="{Binding ReturnCommand}"  Tag="{Binding [MANAGE_Return], Source={StaticResource SR}}" 
                        HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1" Style="{StaticResource Search_ButtonStyle}" Margin="4,0,0,0">
                            <Image Height="15" Source="/ExternalResource;component/Images/MainPage_return.png" Stretch="Fill" Width="15"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </StackPanel>
            <StackPanel Name="detail" Orientation="Horizontal" Visibility="{Binding DetailButtonVisible,Mode=TwoWay}" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Row="1"  Margin="0,15,0,0">
                <Button  Command="{Binding ReturnCommand}"  Tag="{Binding [MANAGE_Return], Source={StaticResource SR}}" 
                        HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1" Style="{StaticResource Search_ButtonStyle}" Margin="4,0,0,0">
                    <Image Height="15" Source="/ExternalResource;component/Images/MainPage_return.png" Stretch="Fill" Width="15"/>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
