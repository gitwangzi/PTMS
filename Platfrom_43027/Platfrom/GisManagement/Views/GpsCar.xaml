                <ToggleButton x:Name="CarBtn1" Style="{StaticResource MonitorButtonStyle1}" ToolTipService.ToolTip="{Binding [Hide],Source={StaticResource SR}}" Click="CarBtn1_Click" Width="100" Height="100" Margin="0,0,0,25" />
