        <Border BorderBrush="DarkBlue" CornerRadius="13" BorderThickness="0" Background="#3d444b">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="10" BlurRadius="14" Direction="300"/>
            </Border.Effect>
            <Border CornerRadius="0" Background="#3d444b" BorderThickness="0" BorderBrush="#77FF0000">
                
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="20"/>
                    </Grid.RowDefinitions>
                    
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="1.5*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Name:" 
                               FontWeight="Bold" 
                               Foreground="#eeeeee" 
                               FontSize="13" 
                               VerticalAlignment="Center" 
                               HorizontalAlignment="Right"
                               Margin="0,20,20,5"
                               Grid.Row="0"
                               Grid.Column="0"/>
                    <TextBlock x:Name="Name"   Foreground="#eeeeee" 
                               Text="{Binding Path=Attributes[Name],Mode=OneWay}" 
                               HorizontalAlignment="Left" 
                               VerticalAlignment="Center"
                               Margin="0,20,0,5"
                               Grid.Row="0"
                               Grid.Column="1"/>

                    <TextBlock Text="Latitude:" 
                               FontWeight="Bold" 
                               Foreground="#eeeeee" 
                               FontSize="13" 
                               VerticalAlignment="Center" 
                               HorizontalAlignment="Right"
                               Margin="0,5,20,5"
                               Grid.Row="1"
                               Grid.Column="0"/>
                    <TextBlock x:Name="Latitude"   Foreground="#eeeeee" 
                               Text="{Binding Path=Attributes[Latitude],Mode=OneWay}" 
                               HorizontalAlignment="Left" VerticalAlignment="Center"
                               Margin="0,5,0,5"
                               Grid.Row="1"
                               Grid.Column="1"/>
                    <TextBlock Text="Longitude:" 
                               FontWeight="Bold" 
                               Foreground="#eeeeee" 
                               FontSize="13" 
                               VerticalAlignment="Center" 
                               HorizontalAlignment="Right"
                               Margin="0,5,20,5"
                               Grid.Row="2"
                               Grid.Column="0"/>
                    <TextBlock x:Name="Longitude"   Foreground="#eeeeee" 
                               Text="{Binding Path=Attributes[Longitude],Mode=OneWay}" 
                               HorizontalAlignment="Left" 
                               VerticalAlignment="Center"
                               Margin="0,5,0,5"
                               Grid.Row="2"
                               Grid.Column="1"/>
                    <TextBlock Text="Address:" 
                               FontWeight="Bold" 
                               Foreground="#eeeeee" 
                               FontSize="13" 
                               VerticalAlignment="Center" 
                               HorizontalAlignment="Right"
                               Margin="0,5,20,5"
                               Grid.Row="3"
                               Grid.Column="0"/>
                    <TextBlock x:Name="Address"   Foreground="#eeeeee" 
                               Text="{Binding Path=Attributes[Address],Mode=OneWay}" 
                               HorizontalAlignment="Left" 
                               VerticalAlignment="Center"
                                Margin="0,5,0,5"
                               Grid.Row="3"
                               Grid.Column="1"/>
                    <TextBlock Visibility="Collapsed" Text="Country:"
                               FontWeight="Bold" 
                               Foreground="#eeeeee" 
                               FontSize="13" 
                               VerticalAlignment="Center" 
                               HorizontalAlignment="Right"
                               Margin="0,5,20,5"
                               Grid.Row="4"
                               Grid.Column="0"/>
                    <TextBlock Visibility="Collapsed" x:Name="Country" 
                               Text="{Binding Path=Attributes[Country],Mode=OneWay}" 
                               HorizontalAlignment="Left" 
                               VerticalAlignment="Center"
                               Margin="0,5,0,5"
                               Grid.Row="4"
                               Grid.Column="1"/>

                </Grid>
                
                
