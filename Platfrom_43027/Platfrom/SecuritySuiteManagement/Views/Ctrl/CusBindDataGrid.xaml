<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk" xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit" x:Class="Gsafety.Ant.SecuritySuite.Views.Ctrl.CusBindDataGrid"
    mc:Ignorable="d"
    Loaded="UserControl_Loaded"
    d:DesignHeight="300" d:DesignWidth="400">
    <toolkit:BusyIndicator Name="bi_root">
        <Grid x:Name="LayoutRoot" Background="White">
        <sdk:DataGrid x:Name="dg_suit"/>
        <sdk:DataPager  x:Name="dp_page"  PageSize="20" PageIndexChanged="dp_page_PageIndexChanged"/>     
    </Grid>
    </toolkit:BusyIndicator>
</UserControl>
