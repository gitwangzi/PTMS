                                <TextBlock TextWrapping="Wrap" Text="{TemplateBinding Content}" VerticalAlignment="Center" Foreground="White" FontSize="17" FontFamily="Segoe UI" Margin="5,0,0,0"/>
                            </StackPanel>
                        </Border>
                        <Border x:Name="Background_Copy" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="8" BorderBrush="#FF1DB535" Opacity="0">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="0" ShadowDepth="1" Opacity="0.2"/>
                            </Border.Effect>
                            <Border.Background>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="#FF1DA833" Offset="1"/>
                                    <GradientStop Color="#FF7CDE6C"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal" Margin="10,3">
                                <!--<Image Source="/ExternalResource;component/Images/login_reset.png" Stretch="Fill" Height="25" Width="25"/>-->
                                <TextBlock TextWrapping="Wrap" Text="{TemplateBinding Content}" VerticalAlignment="Center" Foreground="White" FontSize="17" FontFamily="Segoe UI" Margin="5,0,0,0"/>
