                                <TextBlock TextWrapping="Wrap" Text="{TemplateBinding Content}" VerticalAlignment="Center" Foreground="White" FontSize="18" FontFamily="Segoe UI" Margin="5,0,0,0"/>
                            </StackPanel>
                        </Border>
                        <Border x:Name="Background_Copy" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="8" Opacity="0">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="0" ShadowDepth="1" Opacity="0.2"/>
                            </Border.Effect>
                            <Border.BorderBrush>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="#FF007DBF" Offset="1"/>
                                    <GradientStop Color="#FF1FA1E7"/>
                                </LinearGradientBrush>
                            </Border.BorderBrush>
                            <Border.Background>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="#FF036EA8" Offset="1"/>
                                    <GradientStop Color="#FF32B2F7" Offset="0.046"/>
                                    <GradientStop Color="#FF62C0F2" Offset="0.037"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal" Margin="10,3">
                                <!--<Image Source="/ExternalResource;component/Images/login_login.png" Stretch="Fill" Height="25" Width="25"/>-->
                                <TextBlock TextWrapping="Wrap" Text="{TemplateBinding Content}" VerticalAlignment="Center" Foreground="White" FontSize="18" FontFamily="Segoe UI" Margin="5,0,0,0"/>
