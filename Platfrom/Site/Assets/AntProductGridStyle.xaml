                    <GradientStop Color="#22252C" Offset="1.0"/>-->
                    <GradientStop Color="#FFFFFF" Offset="0.0"/>
                    <GradientStop Color="#EEEEEE" Offset="1.0"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>

    <!--一级Grid的样式-->
    <Style TargetType="Grid" x:Key="FirstLevelGridStyle">
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Setter Property="Background" Value="#51504f"/>
    </Style>

