                            <ColorAnimation Duration="0" To="#6f7e8d" Storyboard.TargetProperty="(Shape.Fill).(GradientBrush.GradientStops)[1].(GradientStop.Color)" Storyboard.TargetName="BackgroundGradient"/>
                        </Storyboard>

                    </VisualState>
                    <!--此处设置鼠标在上面时的颜色-->
                    <VisualState x:Name="MouseOver">
                        <Storyboard>
                            <!--此处设置鼠标在上面时的颜色-->
