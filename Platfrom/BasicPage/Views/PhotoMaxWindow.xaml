<controls:ChildWindow x:Class="Gsafety.PTMS.BasicPage.Views.PhotoMaxWindow"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           Width="400" Height="300" 
           Style="{StaticResource SelfChildenWindowStyle}"
           Title="{Binding [Photo_Max], Source={StaticResource SR}}">
    <Grid x:Name="LayoutRoot" Margin="2">
        <Image x:Name="img" Stretch="Fill" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
               Source="{Binding MPhoto.Img_Url}" MouseLeftButtonDown="img_MouseLeftButtonDown"  />
    </Grid>
</controls:ChildWindow>